{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Backend in Docker",
      "type": "node",
      "request": "attach",
      "address": "localhost",
      "port": 9229,
      "localRoot": "${workspaceFolder}/infrastructure/backend",
      "remoteRoot": "/app",
      "protocol": "inspector",
      "sourceMaps": true,
      "restart": true,
      "preLaunchTask": "docker-compose: build and up"
    },
    {
      "name": "Debug Frontend in Docker",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}/infrastructure/frontend",
      "sourceMapPathOverrides": {
        "webpack:///src/*": "${webRoot}/src/*"
      },
      "preLaunchTask": "docker-compose: build and up"
    }
  ]
}